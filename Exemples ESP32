void setup() {
  Serial.begin(115200);
  delay(1000);

  // ğŸ”¢ int: enter sencer (positiu o negatiu)
  int temperatura = 25;
  Serial.println("Temperatura (int): " + String(temperatura));

  // ğŸ”¢ unsigned int: enter positiu
  unsigned int llum = 1023;
  Serial.println("Llum (unsigned int): " + String(llum));

  // ğŸ”¢ long: enter gran (mÃ©s capacitat que int)
  long distÃ ncia = 123456789;
  Serial.println("DistÃ ncia (long): " + String(distÃ ncia));

  // ğŸ”¢ float: nÃºmero decimal
  float voltatge = 3.3;
  Serial.println("Voltatge (float): " + String(voltatge, 2));

  // ğŸ”¢ double: com float perÃ² amb mÃ©s precisiÃ³ (a vegades igual en microcontroladors)
  double precisio = 3.1415926535;
  Serial.println("PrecisiÃ³ (double): " + String(precisio, 5));

  // ğŸ”¤ char: un sol carÃ cter
  char lletra = 'A';
  Serial.print("Lletra (char): ");
  Serial.println(lletra);

  // ğŸ”¤ String: cadena de text
  String missatge = "Hola ESP32!";
  Serial.println("Missatge (String): " + missatge);

  // ğŸ”˜ bool: valor booleÃ  (true o false)
  bool activat = true;
  Serial.println("Activat (bool): " + String(activat));
}

