#include <Keypad.h>

// Configuració del teclat 4x4
const byte ROWS = 4; 
const byte COLS = 4; 

char keys[ROWS][COLS] = {
  {'1','2','3','A'},
  {'4','5','6','B'},
  {'7','8','9','C'},
  {'*','0','#','D'}
};

byte rowPins[ROWS] = {19, 18, 5, 17}; // Pins connectats a les files
byte colPins[COLS] = {16, 4, 0, 2};   // Pins connectats a les columnes

Keypad keypad = Keypad(makeKeymap(keys), rowPins, colPins, ROWS, COLS);

// Password definit
String password = "1234";
String input = "";

void setup() {
  Serial.begin(115200);
  Serial.println("Introdueix el password:");
}

void loop() {
  char key = keypad.getKey();

  if (key) {
    Serial.print("Has premut: ");
    Serial.println(key);

    if (key == '#') { // '#' = tecla de confirmació
      if (input == password) {
        Serial.println("✅ Password correcte!");
      } else {
        Serial.println("❌ Password incorrecte!");
      }
      input = ""; // Reiniciem entrada
    } 
    else if (key == '*') { // '*' = esborrar
      input = "";
      Serial.println("Entrada reiniciada.");
    } 
    else {
      input += key; // Afegim caràcter a l’entrada
    }
  }
}
